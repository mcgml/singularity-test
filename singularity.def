Bootstrap: docker
From: ubuntu:20.04

%files
requirements.txt requirements.txt

%post
export TZ=Europe/London
export DEBIAN_FRONTEND=noninteractive

# install packages
apt-get update && \
apt-get install -y \
python3

# install python packages
pip3 install -r requirements.txt

%runscript
exec /usr/bin/python3 "$@"

%startscript
exec /usr/bin/python3 "$@"