Bootstrap: docker
From: ubuntu:20.04

%files
/app/requirements.txt requirements.txt

%post
export TZ=Europe/London
export DEBIAN_FRONTEND=noninteractive

# install packages
apt-get update && \
apt-get install -y \
python3 \
python3-pip

# install python packages
/usr/bin/pip install -r requirements.txt

%runscript
exec /usr/bin/python3 "$@"

%startscript
exec /usr/bin/python3 "$@"